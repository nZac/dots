#!/usr/bin/env zsh


function install_vim() {
    if [ "$(brew list | grep ctags)" != "ctags" ]; then
        brew install ctags
    fi

    stow vim
    vim +PlugInstall +qall tmpbuf
    vim +PlugUpdate +qall tmpbuf
}

function install_zsh() {
    stow zsh
}

function run() {
    install_zsh
    install_vim
}

run
